# ~/.tmuxinator/letterz.yml

name: letterz
root: ~/code/letterz
pre_window: source ~/env/letterz/bin/activate

windows:
  - git:
      - atom .
      - git status
  - server:
      - cd letterz_server
  - frontend:
      - cd frontend
  - spawn:
      layout: even-vertical
      panes:
          - redis-server
          - cd letterz_server && ./manage.py runserver
          - cd letterz_server && ./manage.py rqworker default
          - cd letterz_server && ./manage.py rqscheduler
